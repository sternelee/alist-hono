name = "hono"
compatibility_date = "2023-01-01"
main = "src/index.ts"
node_compat = true

kv_namespaces = [
  { binding = "KVDATA", id = "xxxxxxx" }
]

[triggers]
crons = ["*/3 * * * *"]

[[d1_databases]]
binding = "D1DATA"
database_name = "hono_app"
database_id = "xxxxxxx"

[vars]
ENVIRONMENT = 'development'
CUSTOM_HEADERS_TO_IGNORE = []

#
#Configuration for DEVELOPMENT environment
#
[env.staging]
name = "hono-dev"

[env.staging.vars]
ENVIRONMENT = 'staging'
CUSTOM_HEADERS_TO_IGNORE = []


#
#Configuration for PRODUCTION environment
#
[env.production]
name = "hono"
logpush=true

[env.production.vars]
ENVIRONMENT = 'production'
CUSTOM_HEADERS_TO_IGNORE = []
